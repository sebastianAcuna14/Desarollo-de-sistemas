@model IEnumerable<prototipoTienda.Models.Empleado>
@using prototipoTienda.Models
@{
    ViewData["Title"] = "Lista de empleados";
}

<h1>@ViewData["Title"]</h1>

<a asp-controller="Empleado" asp-action="Crear" class="btn btn-primary mt-3">Agregar empleado</a>

<table class="table table-striped mt-4">
    <thead class="table-secondary">
        <tr>
            <th>Nombre Completo</th>
            <th>Cédula</th>
            <th>Rol</th>
            <th>Salario</th>
            <th>Fecha de Contratación</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var empleado in Model)
        {
            <tr>
                <td>@empleado.NombreCompleto</td>
                <td>@empleado.Cedula</td>
                <td>@empleado.Rol</td>
                <td>@empleado.Salario.ToString("C")</td>
                <td>@empleado.FechaContratacion.ToShortDateString()</td>
                <td>
                    <a asp-controller="Empleado" asp-action="Editar" asp-route-id="@empleado.Id" class="btn btn-warning">Editar</a>
                    <a asp-controller="Empleado" asp-action="Consultar" asp-route-id="@empleado.Id" class="btn btn-info">Ver detalles</a>
                    <a asp-controller="Empleado" asp-action="Eliminar" asp-route-id="@empleado.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

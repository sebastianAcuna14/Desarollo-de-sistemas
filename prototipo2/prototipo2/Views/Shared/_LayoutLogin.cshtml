@model prototipo2.Models.Login

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - prototipo2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/prototipo2.styles.css" asp-append-version="true" />
	<link href="~/css/styles.css" rel="stylesheet" />
</head>
<body>
@RenderBody()

    <!-- Contenido Principal -->
    <section class="py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="card border-0 shadow-lg">
                        <div class="card-body p-4 p-md-5">
                            <div class="text-center mb-4">
                                <i class="fas fa-user-circle text-warning fa-3x mb-3"></i>
                                <h2 class="fw-bold">Iniciar Sesión</h2>
                                <p class="text-muted">Accede a tu cuenta para gestionar tus pedidos</p>
                            </div>

                            <form method="post">
                                <div class="mb-3">
                                    <label for="email" class="form-label">Correo Electrónico</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light">
                                            <i class="fas fa-envelope text-muted"></i>
                                        </span>
                                        <input type="email" asp-for= "Username" class="form-control" id="email" placeholder="ejemplo@correo.com" required>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <label for="password" class="form-label">Contraseña</label>
                                        <a href="recover-password.html" class="text-decoration-none small text-warning">¿Olvidaste tu contraseña?</a>
                                    </div>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light">
                                            <i class="fas fa-lock text-muted"></i>
                                        </span>
                                        <input type="password" asp-for="Password" class="form-control" id="password" placeholder="Ingresa tu contraseña" required>
                                        <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </div>
                                </div>

                                <div class="mb-3 form-check">
                                    <input type="checkbox" class="form-check-input" id="rememberMe">
                                    <label class="form-check-label" for="rememberMe">Recordarme</label>
                                </div>

                                <div class="d-grid gap-2 mb-4">
                                    <button type="submit" class="btn btn-warning btn-lg">Iniciar Sesión</button>
                                </div>

                                <div class="text-center">
                                    <p class="mb-0">¿No tienes una cuenta? <a link px-4" asp-area="" asp-controller="Usuario" asp-action="Registro" class="text-decoration-none text-warning">Regístrate</a></p>
                                </div>

                                <div class="text-center">
                                    <p class="mb-0">¿Olvidaste tu contraseña? <a link px-4" asp-area="" asp-controller="Login" asp-action="Recuperar" class="text-decoration-none text-warning">Recuperala</a></p>
                                </div>
                                @if (TempData["MensajeExito"] != null)
                                {
                                    <div class="alert alert-success text-center">
                                        @TempData["MensajeExito"]
                                    </div>
                                }

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>

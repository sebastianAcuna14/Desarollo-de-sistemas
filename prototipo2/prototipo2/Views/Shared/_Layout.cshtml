<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - prototipo2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/prototipo2.styles.css" asp-append-version="true" />
	<link href="~/css/styles.css" rel="stylesheet" />
</head>
<body>
    <header class="bg-dark text-white py-3">
       
            <div class="container">

            <div class="row align-items-center">
                <div class="col-lg-3 mb-3 mb-lg-0 text-center text-lg-start">
                    <a href="index.html" class="text-decoration-none">
                        <h1 class="h3 mb-0 text-white d-flex align-items-center justify-content-center justify-content-lg-start">
                            <i class="fas fa-cogs me-2 text-warning"></i>
                            <span>ElectroMecánica</span>
                        </h1>
                    </a>
                </div>
                <div class="col-lg-5 mb-3 mb-lg-0">
                    <form class="d-flex">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Buscar productos...">
                           
                            <button class="btn btn-warning" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="col-lg-4 text-center text-lg-end">
                    <a href="login.html" class="btn btn-outline-warning me-2">Iniciar Sesión</a>
                    <a href="register.html" class="btn btn-warning">Registrarse</a>
                </div>
            </div>
            </div>
       
    </header>
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
        <div class="container">
            <button class="navbar-toggler mx-auto" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active px-4" href="index.html">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-4" href="catalogo.html">Catálogo</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-4" href="envios.html">Envíos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-4" href="contacto.html">Contáctenos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-4" href="inventario.html">Inventario</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-4" href="reparaciones.html">Reparaciones</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-4" href="usuarios.html">Administración</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <h1 class="display-4 fw-bold mb-3 text-dark">Soluciones Electromecánicas <span class="text-warning">de Calidad</span></h1>
                    <p class="lead mb-4">Ofrecemos los mejores productos y servicios para todas sus necesidades electromecánicas.</p>
                    <div class="d-flex flex-wrap gap-2">
                        <a href="catalogo.html" class="btn btn-dark btn-lg">Ver Catálogo</a>
                        <a href="contacto.html" class="btn btn-outline-dark btn-lg">Contáctenos</a>

                    </div>
                </div>
                <div class="col-lg-6">
                    <!-- Carrusel de Bootstrap -->
                    <div id="heroCarousel" class="carousel slide shadow rounded overflow-hidden" data-bs-ride="carousel">
                        <!-- Indicadores -->
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
                        </div>

                        <!-- Slides -->
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="imagenes/1200x600_Electromecanica.webp" class="d-block w-100" alt="Equipos Electromecánicos">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>Equipos de Alta Calidad</h5>
                                    <p>Tecnología de punta para sus proyectos</p>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img src="imagenes/Imagen1.jpeg" class="d-block w-100" alt="Motores Industriales">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>Motores Industriales</h5>
                                    <p>Potencia y eficiencia garantizada</p>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img src="images/carrusel-3.jpg" class="d-block w-100" alt="Servicio Técnico">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>Soporte Técnico Especializado</h5>
                                    <p>Asistencia profesional para sus equipos</p>
                                </div>
                            </div>
                        </div>

                        <!-- Controles -->
                        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Anterior</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Siguiente</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Servicios -->
    <section class="py-5 bg-light">
        <div class="container">
            <h2 class="text-center fw-bold mb-5">Nuestros Servicios</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="rounded-circle bg-warning bg-opacity-25 p-3 d-inline-flex mb-4">
                                <i class="fas fa-tools fs-3 text-warning"></i>
                            </div>
                            <h3 class="card-title h5 fw-bold">Equipos de Calidad</h3>
                            <p class="card-text text-muted">Ofrecemos una amplia gama de equipos electromecánicos de las mejores marcas.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="rounded-circle bg-warning bg-opacity-25 p-3 d-inline-flex mb-4">
                                <i class="fas fa-truck fs-3 text-warning"></i>
                            </div>
                            <h3 class="card-title h5 fw-bold">Envíos Rápidos</h3>
                            <p class="card-text text-muted">Entregamos sus productos en tiempo récord a cualquier parte del país.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="rounded-circle bg-warning bg-opacity-25 p-3 d-inline-flex mb-4">
                                <i class="fas fa-headset fs-3 text-warning"></i>
                            </div>
                            <h3 class="card-title h5 fw-bold">Soporte Técnico</h3>
                            <p class="card-text text-muted">Brindamos asistencia técnica y mantenimiento para todos nuestros productos.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Productos Destacados -->
    <section class="py-5">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold mb-0">Productos Destacados</h2>
                <a href="catalogo.html" class="text-decoration-none text-warning d-flex align-items-center">
                    Ver todos <i class="fas fa-chevron-right ms-1 small"></i>
                </a>
            </div>
            <div class="row g-4">
                <!-- Producto 1 -->
                <div class="col-sm-6 col-lg-3">
                    <div class="card h-100 border-0 shadow-sm">
                        <img src="images/producto-1.jpg" class="card-img-top" alt="Producto 1">
                        <div class="card-body">
                            <h5 class="card-title">Motor Eléctrico 1</h5>
                            <p class="card-text small text-muted">Potencia: 2HP, Voltaje: 220V</p>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="fw-bold text-warning">$1,199.99</span>
                                <button class="btn btn-sm btn-warning">Agregar</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Producto 2 -->
                <div class="col-sm-6 col-lg-3">
                    <div class="card h-100 border-0 shadow-sm">
                        <img src="images/producto-2.jpg" class="card-img-top" alt="Producto 2">
                        <div class="card-body">
                            <h5 class="card-title">Motor Eléctrico 2</h5>
                            <p class="card-text small text-muted">Potencia: 2HP, Voltaje: 220V</p>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="fw-bold text-warning">$1,299.99</span>
                                <button class="btn btn-sm btn-warning">Agregar</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Producto 3 -->
                <div class="col-sm-6 col-lg-3">
                    <div class="card h-100 border-0 shadow-sm">
                        <img src="images/producto-3.jpg" class="card-img-top" alt="Producto 3">
                        <div class="card-body">
                            <h5 class="card-title">Motor Eléctrico 3</h5>
                            <p class="card-text small text-muted">Potencia: 2HP, Voltaje: 220V</p>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="fw-bold text-warning">$1,399.99</span>
                                <button class="btn btn-sm btn-warning">Agregar</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Producto 4 -->
                <div class="col-sm-6 col-lg-3">
                    <div class="card h-100 border-0 shadow-sm">
                        <img src="images/producto-4.jpg" class="card-img-top" alt="Producto 4">
                        <div class="card-body">
                            <h5 class="card-title">Motor Eléctrico 4</h5>
                            <p class="card-text small text-muted">Potencia: 2HP, Voltaje: 220V</p>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="fw-bold text-warning">$1,499.99</span>
                                <button class="btn btn-sm btn-warning">Agregar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white py-5 mt-auto">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-3 col-md-6">
                    <h3 class="h5 mb-3">ElectroMecánica</h3>
                    <p class="text-white small">Soluciones electromecánicas de calidad para todas sus necesidades industriales y comerciales.</p>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h4 class="h6 mb-3">Enlaces Rápidos</h4>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="index.html" class="text-decoration-none text-white">Inicio</a></li>
                        <li class="mb-2"><a href="catalogo.html" class="text-decoration-none text-white">Catálogo</a></li>
                        <li class="mb-2"><a href="envios.html" class="text-decoration-none text-white">Envíos</a></li>
                        <li class="mb-2"><a href="contacto.html" class="text-decoration-none text-white">Contacto</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h4 class="h6 mb-3">Mi Cuenta</h4>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="login.html" class="text-decoration-none text-white">Iniciar Sesión</a></li>
                        <li class="mb-2"><a href="register.html" class="text-decoration-none text-white">Registrarse</a></li>
                        <li class="mb-2"><a href="recover-password.html" class="text-decoration-none text-white">Recuperar Contraseña</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none text-white">Mis Pedidos</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h4 class="h6 mb-3">Contacto</h4>
                    <address class="text-white small mb-0">
                        <p>Calle Principal #123</p>
                        <p>Ciudad Industrial</p>
                        <p>Teléfono: (506) 8649-2345</p>
                        <p>Email: info@electromecanica.com</p>
                    </address>
                </div>
            </div>
            <hr class="my-4 border-secondary">
            <div class="text-center text-white small">
                <p>&copy; <span id="current-year"></span> ElectroMecánica. Todos los derechos reservados.</p>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

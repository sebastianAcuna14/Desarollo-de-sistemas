@model prototipo2.Models.Producto

@{
    ViewData["Title"] = "Detalles del producto";
}

<div class="container mt-4">
    <h1>Detalles del Producto</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Nombre del Producto:</dt>
        <dd class="col-sm-9">@Model.Nombre_Producto</dd>

        <dt class="col-sm-3">Categoría del Producto:</dt>
        <dd class="col-sm-9">@Model.Categoria</dd>

        <dt class="col-sm-3">Proveedor Encargado:</dt>
        <dd class="col-sm-9">@Model.Proveedor</dd>

        <dt class="col-sm-3">Precio Actual:</dt>
        <dd class="col-sm-9">@Model.Precio.ToString("C")</dd>

        <dt class="col-sm-3">Cantidad Disponible:</dt>
        <dd class="col-sm-9">@Model.Cantidad</dd>
    </dl>

    <a asp-action="Index" class="btn btn-secondary">Volver a la pagina principal de inventario</a>
</div>
